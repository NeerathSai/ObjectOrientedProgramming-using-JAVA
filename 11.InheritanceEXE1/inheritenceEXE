import java.util.Scanner; 

 

 

class Vehicle{ 

public static String type; 

Scanner sc=new Scanner(System.in); 

 

 

} 

 

 

class Car extends Vehicle{ 

String name; 

double mileage; 

String company; 

int noc; 

 

 

Car(){ 

System.out.println("Please enter the type of the car: "); 

type=sc.next(); 

System.out.println("Please enter the company name of the car: "); 

company=sc.next(); 

System.out.println("Please enter the name of the car: "); 

name=sc.next(); 

 

 

System.out.println("Please enter the mileage of the vehicle: "); 

mileage=sc.nextDouble(); 

System.out.println("Please enter the number of cylinders in the car: "); 

noc=sc.nextInt(); 

} 

 

 

void getType() { 

System.out.println("Car Type: "+ type); 

} 

void getCompany() { 

System.out.println("The car "+ name +" is from the company "+ company); 

} 

void getName() { 

System.out.println("The name of the car is "+ name+"."); 

} 

void getMileage() { 

System.out.println("The mileage of the car is "+ mileage); 

} 

void getNOC() { 

System.out.println("The number of cylinders in the car is "+ noc); 

} 

void nothing() { 

System.out.println("-------------------"); 

} 

} 

 

 

public class Problem_2 { 

public static void main(String[] args) { 

Scanner sc=new Scanner(System.in); 

try{Car C1=new Car(); 

C1.getName(); 

C1.getCompany(); 

C1.getType(); 

C1.getMileage(); 

C1.getNOC(); 

C1.nothing(); 

Car C2=new Car(); 

 

 

C2.getName(); 

C2.getCompany(); 

C2.getType(); 

C1.getMileage(); 

C2.getNOC(); 

C2.nothing(); 

if(C2.name.equals(C2.name)) { 

throw new IllegalArgumentException(); 

} 

}catch(IllegalArgumentException e) { 

System.out.println("Sorry, the details of this car has already been shown"); 

} 

 

Car C3=new Car(); 

C3.getType(); 

C3.getCompany(); 

C3.getName(); 

C3.getMileage(); 

C3.getNOC(); 

 

 

Car C4=new Car(); 

C4.getType(); 

C4.getCompany(); 

C4.getName(); 

C4.getMileage(); 

C4.getNOC(); 

 

 

} 

} 
